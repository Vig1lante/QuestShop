                                    <h1 data-animation="fadeInUp" data-delay=".6s">Quest Shop</h1>
                                    <!-- Hero-btn -->
                                    <div class="hero__btn">
                                        <a href="industries.html" class="btn hero-btn" data-animation="fadeInLeft" data-delay=".8s">JUMP IN</a>
