                                    <div class="hero__btn">
                                        <a href="industries.html" class="btn hero-btn" data-animation="fadeInLeft" data-delay=".8s">JUMP IN</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Hero Man Img -->
                    <div class="hero-man">
                        <img src="/img/hero/hero_man1.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </main>
    <partial name="_ItemThumbnail" model="Model" />
